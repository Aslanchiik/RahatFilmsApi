<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#362c45"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.detail.FilmDetailFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_guid"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/image_film"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/first_guid"
        android:src="@drawable/image_films"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/text_of_producer"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_film"
        android:layout_margin="10dp"
        android:text="Продюссер: "
        android:textColor="#bfbd26"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#bfbd26"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/text_of_producer"
        app:layout_constraintTop_toBottomOf="@+id/image_film"/>

    <TextView
        android:id="@+id/text_of_director"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_of_producer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Директор:"
        android:textColor="#bfbd26"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name_of_director"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text_of_director"
        app:layout_constraintTop_toTopOf="@+id/text_of_director"
        android:textSize="16sp"
        android:layout_marginStart="7dp"
        android:textColor="#bfbd26"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_of_time"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_of_director"
        android:layout_margin="10dp"
        android:text="Длительность фильма:"
        android:textColor="#bfbd26"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/time_of_film"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text_of_time"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/text_of_time"
        android:textSize="16sp"
        android:textColor="#bfbd26"
        android:layout_marginStart="7dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_desc_of_film"
        android:layout_width="wrap_content"
        android:text="Описание фильма"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_of_time"
        android:textSize="20sp"
        android:textColor="#bfbd26"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/description_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"
        android:textColor="#bfbd26"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_desc_of_film" />

</androidx.constraintlayout.widget.ConstraintLayout>